  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["server.ts"],
  "exclude": ["src/**/*", "node_modules"]
}
